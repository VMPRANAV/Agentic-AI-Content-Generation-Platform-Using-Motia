{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "typeRoots": ["./node_modules/@types"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*.ts",
    "steps/**/*.ts",
    "motia.config.ts",
    "src/**/*.tsx",
    "types.d.ts",
    "src/**/*.jsx",
    "src/services/agents/llm-factory.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".motia",
    "tests"
  ]
}
